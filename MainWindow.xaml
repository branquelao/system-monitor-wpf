<Window x:Class="SystemMonitorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemMonitorWPF"
        xmlns:services="clr-namespace:SystemMonitorWPF.Services"
        mc:Ignorable="d"
        Title="System Monitor" 
        Height="500" Width="400"
        Background="#1E1E1E"
        Padding="0" Margin="0"
        >

    <Window.Resources>
        <services:HighValueToBoolConverter x:Key="HighCpuConverter" Threshold="20"/>
        <services:HighValueToBoolConverter x:Key="HighRamConverter" Threshold="500"/>

        <Color x:Key="BackgroundColor">#1E1E1E</Color>
        <Color x:Key="ForegroundColor">#E6E6E6</Color>
        <Color x:Key="AccentColor">#3BAAF5</Color>
        <Color x:Key="RowHoverColor">#333333</Color>
        <Color x:Key="RowLight">#262626</Color>
        <Color x:Key="RowDark">#1F1F1F</Color>

        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="RowHoverBrush" Color="{StaticResource RowHoverColor}"/>
        <SolidColorBrush x:Key="RowLightBrush" Color="{StaticResource RowLight}"/>
        <SolidColorBrush x:Key="RowDarkBrush" Color="{StaticResource RowDark}"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        </Style>

        <Style TargetType="ProgressBar">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Background" Value="#303030"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Height" Value="18"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="Background" Value="{StaticResource RowLightBrush}"/>

            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="{StaticResource RowDarkBrush}"/>
                </Trigger>

                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource RowHoverBrush}"/>
                </Trigger>

                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#444444"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="KillButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#C0392B"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Padding" Value="6,2"></Setter>
            <Setter Property="FontSize" Value="11"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="Background" Value="#C0392B"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center">
                            </ContentPresenter>
                            
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <ContentPresenter VerticalAlignment="Center"/>

                                <Path x:Name="SortArrow"
                                      Visibility="Collapsed"
                                      Fill="#3BAAF5"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Margin="0,0,6,0"
                                      Data="M 0 0 L 8 0 L 4 5 Z"
                                      RenderTransformOrigin="0.5,0.5"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>

                            <Trigger Property="SortDirection" Value="Ascending">
                                <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="SortArrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleY="-1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="SortDirection" Value="Descending">
                                <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="SortArrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ProcessCellStyle"
            TargetType="DataGridCell">

            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>

            <Style.Triggers>

                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self},
                                       Path=Column.SortDirection}"
                     Value="Ascending">
                    <Setter Property="Background" Value="#1F2A33"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self},
                                       Path=Column.SortDirection}"
                     Value="Descending">
                    <Setter Property="Background" Value="#1F2A33"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding CpuUsage, Converter={StaticResource HighCpuConverter}}"
                     Value="True">
                    <Setter Property="Background" Value="#402020"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding MemoryUsage, Converter={StaticResource HighRamConverter}}"
                     Value="True">
                    <Setter Property="Background" Value="#402020"/>
                </DataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding CpuUsage, Converter={StaticResource HighCpuConverter}}"
                           Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow},
                                              Path=IsMouseOver}"
                           Value="True"/>
                    </MultiDataTrigger.Conditions>

                    <Setter Property="Background" Value="#603030"/>
                </MultiDataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding MemoryUsage, Converter={StaticResource HighRamConverter}}"
                           Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow},
                                              Path=IsMouseOver}"
                           Value="True"/>
                    </MultiDataTrigger.Conditions>

                    <Setter Property="Background" Value="#603030"/>
                </MultiDataTrigger>

                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3BAAF5"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>

            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="16" Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Monitor for CPU and RAM"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,8">
            <TextBlock x:Name="TxtCpu"
                       Text="CPU: 0%"
                       FontSize="14"
                       Margin="0,0,0,4"/>

            <ProgressBar x:Name="BarCpu"
                         Minimum="0" Maximum="100" Value="0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,8">
            <TextBlock x:Name="TxtRam"
                       Text="RAM: 0%"
                       FontSize="14"
                       Margin="0,0,0,4"/>

            <ProgressBar x:Name="BarRam"
                         Minimum="0" Maximum="100" Value="0"/>
        </StackPanel>
        
        <DataGrid x:Name="GridProcesses"
                  Grid.Row="3"
                  ItemsSource="{Binding ProcessesView}"
                  SelectedItem="{Binding SelectedProcess}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserSortColumns="True"
                  Sorting="GridProcessesSorting"
                  IsReadOnly="True"
                  AlternationCount="2"
                  ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                  CellStyle="{StaticResource ProcessCellStyle}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="PID" Binding="{Binding PID}" Width="80"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" SortMemberPath="Name"/>
                <DataGridTextColumn Header="CPU (%)" Binding="{Binding CpuUsage, StringFormat=N2}" Width="65" 
                                    SortMemberPath="CpuUsage"/>
                <DataGridTextColumn Header="RAM (MB)" Binding="{Binding MemoryUsage, StringFormat=N2}" Width="65" 
                                    SortMemberPath="MemoryUsage"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="4"
                Content="End Task"
                Style="{StaticResource KillButtonStyle}"
                Height="25"
                Width="65"
                Margin="0,15,0,0"
                HorizontalAlignment="Right"
                Click="KillProcess">
        </Button>
        
    </Grid>

</Window>
