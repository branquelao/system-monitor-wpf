<Window x:Class="SystemMonitorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemMonitorWPF"
        mc:Ignorable="d"
        Title="System Monitor" Height="500" Width="400">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Monitor for CPU and RAM" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,8"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,8">
            <TextBlock x:Name="TxtCpu"
                       Text="CPU: 0%"
                       FontSize="14"
                       Margin="0,0,0,4"/>

            <ProgressBar x:Name="BarCpu"
                         Height="18"
                         Minimum="0"
                         Maximum="100"
                         Value="0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,8">
            <TextBlock x:Name="TxtRam"
                       Text="RAM: 0%"
                       FontSize="14"
                       Margin="0,0,0,4"/>

            <ProgressBar x:Name="BarRam"
                         Height="18"
                         Minimum="0"
                         Maximum="100"
                         Value="0"/> 
        </StackPanel>

        <DataGrid x:Name="GridProcesses"
                  Grid.Row="3"
                  ItemsSource="{Binding Processes}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="PID" Binding="{Binding PID}" Width="80"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="CPU (%)" Binding="{Binding CpuUsage, StringFormat=N2}" Width="65"/>
                <DataGridTextColumn Header="RAM (MB)" Binding="{Binding MemoryUsage, StringFormat=N2}" Width="65"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
